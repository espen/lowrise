<h1>Editing person</h1>

<% form_for(@person) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :FirstName %><br />
    <%= f.text_field :FirstName %>
  </p>
  <p>
    <%= f.label :LastName %><br />
    <%= f.text_field :LastName %>
  </p>
  <p>
    <%= f.submit "Update" %>
  </p>
<% end %>

<%= link_to 'Show', @person %> |
<%= link_to 'Back', people_path %>
